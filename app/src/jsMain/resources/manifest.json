{
  "name": "Chrome Plugin Template",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "extensions",
    "tabs",
    "activeTab",
    "scripting",
    "bookmarks",
    "notifications",
    "tabGroups"
  ],
  "action": {
    "default_icon": {
      "16": "image/sample_image.png",
      "24": "image/sample_image.png",
      "32": "image/sample_image.png"
    },
    "default_title": "Chrome Plugin Template",
    "default_popup": "page/default_popup.html"
  }
}